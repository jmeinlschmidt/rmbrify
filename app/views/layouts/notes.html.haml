!!! 5
%html(lang='en')
  %head
    %meta(charset='utf-8')
    %meta(http-equiv='X-UA-Compatible' content='IE=Edge,chrome=1')
    %meta(name='viewport' content='width=device-width, initial-scale=1.0')
    %title= content_for?(:title) ? yield(:title) : 'rmbrify.com'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'notes/_layout', media: 'all'
    = yield(:header)
    = javascript_include_tag 'application'

  %body
    #header-container
      .line
      #menu
        .menu-item.col-md-4{:class => "#{'selected' if current_page?(root_path) or current_page?(notes_path)}"}
          notes
        .menu-item.col-md-4{:class => "#{'selected' if current_page?(about_path)}"}
          about
        .menu-item.col-md-4{:class => "#{'selected' if current_page?(settings_path)}"}
          settings
    #body-container
      = yield